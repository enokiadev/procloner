# ProCloner Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3002
API_PORT=3002

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CRAWL_MAX_REQUESTS=10

# Crawling Configuration
MAX_CONCURRENT_SESSIONS=5
DEFAULT_CRAWL_TIMEOUT=120000
SESSION_TIMEOUT_MS=300000
DEFAULT_CRAWL_DEPTH=3
MAX_CRAWL_DEPTH=5

# Browser Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# File Storage Configuration
TEMP_DIR=./temp
MAX_TEMP_AGE_HOURS=24
MAX_TEMP_SIZE_MB=1024

# Frontend Configuration (for client/.env)
# REACT_APP_API_BASE_URL=http://localhost:3002
# REACT_APP_WS_URL=ws://localhost:3002
# REACT_APP_EXAMPLE_URLS=https://example.com,https://demo.com

# Production Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=/api/csp-report